@page "/about"
@rendermode InteractiveServer

<PageTitle>About</PageTitle>

<h1>About Us</h1>

<p role="status">We have clicked this button @currentCount times</p>

<button class="btn btn-primary" @onclick="IncrementCount">Don't Touch</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

}